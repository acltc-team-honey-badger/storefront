    <section>
      <div class="row">
        <div class="col-sm-9">
          <div class="taco_single">
          <ul>
            <% if @product && @product.errors.any? %>
              <% @product.errors.full_messages.each do |message| %>
                <li class="bad-taco"><%= message %></li>
              <% end %>
            <% end %>
          </ul>
            <h1>Create a new recipe:</h1>

            <%= form_tag '/products', method: :post do %>

            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name, @product.name %>
            </div>
            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price, @product.price %>
            </div>
            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description, @product.description %>
            </div>
            <div>
              <%= label_tag :rating %>
              <%= text_field_tag :rating, @product.rating %>
            </div>
            <%= submit_tag "Add Taco" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
