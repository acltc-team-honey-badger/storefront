    <section>
      <div class="row">
        <div class="pull-right view-choice">
          <p><%= link_to "Show Discounted Items", "/products?view=discounted" %></p>
          <p><%= link_to "Show Priced Lowest to Highest", "/products?view=order_by_price" %></p>
          <p><%= link_to "Show Priced Highest to Lowest", "/products?view=order_by_price_desc" %></p>
          <p><%= link_to "I'm feeling lucky", "/products/random" %></p>
          <p><%= link_to "Show All", "/products" %></p>

        </div>
      </div>
      <div class="row">
      
      <!--Make magic happen here Ruby!-->


      <% @products.each do |taco| %>

        <div class="col-sm-4">
          <div class="taco_single">
            <h2><%= taco.name %></h2>
            <p>Price: <%= taco.price %></p>
            <a href="/products/<%= taco.id %>" title="View Taco"><img src="<%= taco.images.first.image_url %>" alt="<%= taco.name %>" class="img-responsive taco_single_image"></a>
            <p>Description: <%= taco.description %></p>
            <p>Rating: <span class="rating"><%= taco.rating %></span></p>
          </div>
        </div>
      <% end %>
      <!--Magic ends-->

      </div>
    </section>
    <%= link_to "Add New Recipe", "products/new" %>
