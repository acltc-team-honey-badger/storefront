  <section>
    <div class="row">    
      <div class="col-sm-9">
        <div class="taco_single">
        <h2><%= @product.sale_message  %></h2>
            <h2><%= @product.name %></h2>
            <p>Price: $<%= @product.price %></p>
            <p>Tax: $<%= @product.tax %></p>
            <p>Total: $<%= @product.total %></p>
            <% @product.images.each do |image| %>
              <img src="<%= image.image_url %>" alt="<%= @product.name %>" class="img-responsive">
            <% end %>
            <p>Description: <%= @product.description %></p>
            <p>Rating: <span class="rating"><%= @product.rating %></span></p>
            <p>Supplier: <%= @product.supplier.name %></p>
            <%= form_tag '/orders', method: :post do %>
              <div>
                <%= label_tag :quantity %>
                <%= text_field_tag :quantity %>
              </div>
              <div>
                <%= label_tag :product_id %>
                <%= text_field_tag :product_id %>
              </div>
              <div>
                <%= submit_tag "Buy Now!!!!" %>
              </div>
            <% end %>
            <%= link_to "Edit", "/products/#{@product.id}/edit", class: "btn btn-success" %>
            <%= link_to "Delete", "/products/#{@product.id}", {method: :delete, class: "btn btn-danger" }%>
        </div>
      </div>
    </div>
  </section>
